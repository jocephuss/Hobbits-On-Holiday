<div id="login">
  <h2>Login</h2>

  <form id="login-form">
    <input type="text" id="username-login" placeholder="Username" required />
    <input
      type="password"
      id="password-login"
      placeholder="Password"
      required
    />
    <button type="submit">Login</button>
  </form>

  <p>Don't have an account? <a href="/signup">Sign up here</a></p>
</div>
<script src="/js/login.js"></script>