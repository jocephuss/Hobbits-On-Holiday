<div id="signup">
  <h2>Sign Up</h2>

  <form id="signup-form">
    <input type="text" id="username-signup" placeholder="Username" required />
    <input
      type="password"
      id="password-signup"
      placeholder="Password"
      required
    />
    <button type="submit">Sign Up</button>
  </form>

  <p>Already have an account? <a href="/login">Log in here</a></p>
</div>
<script src="/js/signup.js"></script>